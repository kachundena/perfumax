<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lltitulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvPerfumeId"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Editando Perfume"
        android:textSize="24sp"
        android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llnombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbNombre"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/etEditarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="Nombre del perfume"
        android:inputType="text"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llmarca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbMarca"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:gravity="left|bottom"
        android:text="Marca"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/etEditarMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Marca del perfume"
        android:textSize="16sp"
        android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llarea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbArea"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llopiniones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbOpiniones"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Opiniones"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spOpiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lllistadeseos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbListaDeseos"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Lista Deseos"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spListaDeseos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfamilia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/lbFamilia"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:gravity="left|bottom"
        android:text="Familia"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spFamilia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llbotones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >


    <Button
        android:id="@+id/btnGuardarCambiosPerfume"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />

    <Button
        android:id="@+id/btnCancelarEdicionPerfume"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar" />
    </LinearLayout>


</LinearLayout>